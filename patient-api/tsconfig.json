{
  "extends": "@fuse/tsconfig/internal-package.json",
  "compilerOptions": {
    "jsx": "preserve",
    "rootDir": ".",
    "baseUrl": ".",
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}