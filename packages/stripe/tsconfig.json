{
  "extends": "@fuse/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "emitDeclarationOnly": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "index.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}